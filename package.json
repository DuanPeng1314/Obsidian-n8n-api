{
    "name": "n8n-nodes-obsidian-rest",
    "version": "1.0.3",
    "description": "n8n community node for Obsidian Local REST API - A complete integration for managing Obsidian vault via REST API",
    "keywords": [
        "n8n-community-node-package",
        "obsidian",
        "obsidian-api",
        "rest-api",
        "markdown",
        "notes",
        "knowledge-management"
    ],
    "license": "MIT",
    "homepage": "https://github.com/DuanPeng1314/Obsidian-n8n-api",
    "author": {
        "name": "阳光",
        "email": "112961548@qq.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/DuanPeng1314/Obsidian-n8n-api.git"
    },
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc && gulp build:icons",
        "dev": "tsc --watch",
        "format": "prettier nodes credentials --write",
        "lint": "eslint nodes credentials package.json",
        "lintfix": "eslint nodes credentials package.json --fix",
        "prepublishOnly": "npm run build"
    },
    "files": [
        "dist"
    ],
    "n8n": {
        "n8nNodesApiVersion": 1,
        "credentials": [
            "dist/credentials/ObsidianApi.credentials.js"
        ],
        "nodes": [
            "dist/nodes/ObsidianRest/ObsidianRest.node.js"
        ]
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.56.0",
        "eslint-plugin-n8n-nodes-base": "^1.16.0",
        "gulp": "^4.0.2",
        "n8n-workflow": "^1.0.0",
        "prettier": "^3.1.0",
        "typescript": "^5.9.3"
    },
    "peerDependencies": {
        "n8n-workflow": "*"
    }
}